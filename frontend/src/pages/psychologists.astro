---

<DashboardLayout title="MindEase - Psychologists">
    <div className="max-w-6xl mx-auto">
        <header className="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <h1 className="text-3xl font-heading font-bold text-gray-800 mb-2">Find Your Guide ðŸŒ¿</h1>
                <p className="text-gray-500">Connect with verified professionals who understand you.</p>
            </div>
            
            <div className="flex gap-2">
                <div className="relative">
                    <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400" />
                    <input 
                        type="text" 
                        placeholder="Search by name or issue..." 
                        className="pl-10 pr-4 py-2 rounded-xl border border-gray-200 focus:outline-none focus:border-pastel-blue w-64"
                    />
                </div>
                <button className="p-2 rounded-xl border border-gray-200 hover:bg-gray-50 text-gray-600">
                    <Filter className="w-5 h-5" />
                </button>
            </div>
        </header>

        <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {psychologists.map(psych => (
                <PsychologistCard client:load {...psych} />
            ))}
        </div>
    </div>
</DashboardLayout>
