---
import { Brain, Users, Shield, Clock, Heart, MessageCircle } from 'lucide-react';

const features = [
    {
        icon: Brain,
        title: "AI-Powered Support",
        description: "Chat with MindMate, our empathetic AI assistant available 24/7 for immediate support.",
        bgColor: "bg-brutal-blue",
        borderColor: "border-black"
    },
    {
        icon: Users,
        title: "Expert Psychologists",
        description: "Connect with certified professionals specialized in your age group and concerns.",
        bgColor: "bg-brutal-pink",
        borderColor: "border-black"
    },
    {
        icon: Shield,
        title: "Complete Privacy",
        description: "Your conversations are confidential and secure. We prioritize your privacy.",
        bgColor: "bg-brutal-purple",
        borderColor: "border-black"
    },
    {
        icon: Clock,
        title: "Flexible Scheduling",
        description: "Book sessions at times that work for you, with easy rescheduling options.",
        bgColor: "bg-brutal-orange",
        borderColor: "border-black"
    },
    {
        icon: Heart,
        title: "Daily Wellness",
        description: "Access daily quotes, journaling tools, and mood tracking to support your journey.",
        bgColor: "bg-brutal-yellow",
        borderColor: "border-black"
    },
    {
        icon: MessageCircle,
        title: "Issue-Based Matching",
        description: "Get matched with specialists in exam stress, anxiety, depression, and more.",
        bgColor: "bg-brutal-green",
        borderColor: "border-black"
    }
];
---

<section id="features" class="py-20 bg-brutal-cream">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <div class="inline-block bg-brutal-pink border-4 border-black px-8 py-3 shadow-brutal-lg rotate-1 mb-6">
                <h2 class="text-4xl md:text-5xl font-heading font-black text-black">
                    How We Support You
                </h2>
            </div>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
            {features.map((feature, index) => (
                <div class={`${feature.bgColor} p-8 border-4 ${feature.borderColor} shadow-brutal-lg hover:shadow-brutal-xl transition-all duration-200 hover:translate-x-1 hover:translate-y-1 ${index % 2 === 0 ? 'rotate-1' : '-rotate-1'}`}>
                    <div class="bg-white border-4 border-black w-16 h-16 flex items-center justify-center mb-6 shadow-brutal">
                        <feature.icon className="w-8 h-8 text-black" />
                    </div>
                    <h3 class="text-2xl font-black text-black mb-4 uppercase tracking-tight">{feature.title}</h3>
                    <p class="text-black font-bold leading-relaxed">
                        {feature.description}
                    </p>
                </div>
            ))}
        </div>
    </div>
</section>
