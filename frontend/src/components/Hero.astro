<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-b from-pastel-blue/20 to-pastel-lavender/20">
    <!-- Background Animated Elements -->
    <div class="absolute inset-0 pointer-events-none">
        <div class="absolute top-20 left-20 w-64 h-64 bg-pastel-blue/30 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-20 right-20 w-80 h-80 bg-pastel-peach/30 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-pastel-green/20 rounded-full blur-3xl animate-float" style="animation-delay: 4s;"></div>
    </div>

