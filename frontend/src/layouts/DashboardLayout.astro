---
import '../styles/global.css';
import { Home, User, Calendar, MessageCircle, Settings, LogOut } from 'lucide-react';

interface Props {
	title: string;
}

const { title } = Astro.props;

const navItems = [
    { icon: Home, label: 'Home', href: '/dashboard' },
    { icon: User, label: 'Psychologists', href: '/psychologists' },
    { icon: Calendar, label: 'Sessions', href: '/sessions' },
    { icon: MessageCircle, label: 'MindMate AI', href: '/chat' },
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-background min-h-screen flex font-sans overflow-hidden bg-gradient-to-br from-pastel-yellow/40 via-pastel-peach/30 to-pastel-aqua/30">
        <!-- Background Blobs -->
        <div class="fixed inset-0 pointer-events-none z-0">
            <div class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] bg-pastel-peach/50 rounded-full blur-[120px] animate-float mix-blend-multiply"></div>
            <div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-pastel-aqua/50 rounded-full blur-[120px] animate-float-delayed mix-blend-multiply"></div>
            <div class="absolute top-[20%] right-[10%] w-[30%] h-[30%] bg-pastel-lavender/40 rounded-full blur-[100px] animate-float" style="animation-delay: 2s"></div>
        </div>

        <!-- Sidebar -->
        <aside class="w-72 glass-panel m-6 rounded-[2rem] hidden md:flex flex-col relative z-20 transition-all duration-500 hover:shadow-[0_20px_40px_rgba(0,0,0,0.05)]">
            <div class="p-8">
                <h1 class="text-3xl font-heading font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 drop-shadow-sm">MindEase</h1>
            </div>
            
            <nav class="flex-1 px-4 space-y-3">
                {navItems.map((item) => (
                    <a href={item.href} class="flex items-center gap-4 px-6 py-4 text-gray-600 hover:bg-white/60 hover:text-pastel-peach-dark rounded-2xl transition-all duration-300 group hover:shadow-sm">
                        <item.icon className="w-5 h-5 group-hover:scale-110 transition-transform text-pastel-lavender-dark group-hover:text-pastel-peach-dark" />
                        <span class="font-medium">{item.label}</span>
                    </a>
                ))}
            </nav>

            <div class="p-6 border-t border-white/30">
                <div class="mb-6 p-5 bg-red-50/60 backdrop-blur-sm rounded-2xl border border-red-100 shadow-inner">
                    <h4 class="text-xs font-bold text-red-400 uppercase tracking-wider mb-2 flex items-center gap-2">
                        <span class="w-2 h-2 bg-red-400 rounded-full animate-pulse"></span> Need Help Now?
                    </h4>
                    <p class="text-xs text-gray-600 mb-3">24/7 Helplines available.</p>
                    <a href="tel:9152987821" class="text-xs font-bold text-red-500 hover:underline block flex items-center gap-2 bg-white/80 p-2 rounded-lg justify-center shadow-sm hover:shadow-md transition-all">
                        <span>ðŸ“ž</span> AASRA: 91-52987821
                    </a>
                </div>
                <button class="flex items-center gap-3 px-4 py-3 text-gray-500 hover:text-red-400 w-full transition-colors rounded-xl hover:bg-red-50/50 group">
                    <LogOut className="w-5 h-5 group-hover:-translate-x-1 transition-transform" />
                    <span class="font-medium">Sign Out</span>
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-4 md:p-8 overflow-y-auto relative z-10">
            <slot />
        </main>
	</body>
</html>
