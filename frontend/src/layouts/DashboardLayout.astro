---
import '../styles/global.css';
import { Home, User, Calendar, MessageCircle, Settings, LogOut } from 'lucide-react';

interface Props {
	title: string;
}

const { title } = Astro.props;

const navItems = [
    { icon: Home, label: 'Home', href: '/dashboard' },
    { icon: User, label: 'Psychologists', href: '/psychologists' },
    { icon: Calendar, label: 'Sessions', href: '/sessions' },
    { icon: MessageCircle, label: 'MindMate AI', href: '/chat' },
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-background min-h-screen flex font-sans">
        <!-- Sidebar -->
        <aside class="w-64 bg-white border-r border-gray-100 hidden md:flex flex-col fixed h-full z-20">
            <div class="p-8">
                <h1 class="text-2xl font-heading font-bold text-pastel-blue">MindEase</h1>
            </div>
            
            <nav class="flex-1 px-4 space-y-2">
                {navItems.map((item) => (
                    <a href={item.href} class="flex items-center gap-3 px-4 py-3 text-gray-600 hover:bg-pastel-blue/10 hover:text-pastel-blue rounded-xl transition-colors">
                        <item.icon className="w-5 h-5" />
                        <span class="font-medium">{item.label}</span>
                    </a>
                ))}
            </nav>

            <div class="p-4 border-t border-gray-100">
                <div class="mb-4 p-3 bg-red-50 rounded-xl border border-red-100">
                    <h4 class="text-xs font-bold text-red-400 uppercase tracking-wider mb-1">Need Help Now?</h4>
                    <p class="text-xs text-gray-600 mb-2">24/7 Helplines available.</p>
                    <a href="tel:9152987821" class="text-xs font-bold text-red-500 hover:underline block">AASRA: 91-52987821</a>
                </div>
                <button class="flex items-center gap-3 px-4 py-3 text-gray-500 hover:text-red-400 w-full transition-colors">
                    <LogOut className="w-5 h-5" />
                    <span class="font-medium">Sign Out</span>
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 md:ml-64 p-8 overflow-y-auto">
            <slot />
        </main>
	</body>
</html>
